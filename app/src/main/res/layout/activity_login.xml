<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <Button
            android:id="@+id/emailLogin_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일로 시작하기"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <Button
            android:id="@+id/googleLogin_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구글로 시작하기"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/emailLogin_btn_login"
            app:layout_constraintStart_toStartOf="@+id/emailLogin_btn_login"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailLogin_btn_login"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>

    <Button
            android:id="@+id/facebookLogin_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="페이스북으로 시작하기"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/googleLogin_btn_login"
            app:layout_constraintEnd_toEndOf="@+id/googleLogin_btn_login"
            app:layout_constraintStart_toStartOf="@+id/googleLogin_btn_login"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>